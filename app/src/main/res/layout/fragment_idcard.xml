<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding"
            android:text="@string/info_sfyz_pz"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/size_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/btn_submit_sel" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding">

            <LinearLayout
                android:id="@+id/llyt_take_tip1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_take_photo1"
                    android:layout_width="100dp"
                    android:layout_height="71dp"
                    android:background="@drawable/bg_take_photo_sel"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_take_photo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/info_take_photo_tip1"
                    android:textColor="@color/black_txt"
                    android:textSize="@dimen/size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_take_tip2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_take_photo2"
                    android:layout_width="100dp"
                    android:layout_height="71dp"
                    android:background="@drawable/bg_take_photo_nor"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_take_photo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/info_take_photo_tip2"
                    android:textColor="@color/btn_submit_sel"
                    android:textSize="@dimen/size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_take_tip3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_take_photo3"
                    android:layout_width="100dp"
                    android:layout_height="71dp"
                    android:background="@drawable/bg_take_photo_nor"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_take_photo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/info_take_photo_tip3"
                    android:textColor="@color/btn_submit_sel"
                    android:textSize="@dimen/size_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_form_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_real_name"
                    android:textColor="@color/black_txt" />

                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_half"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_white_selector"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:id="@+id/tv_realname_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:text="@string/info_edit"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:background="@drawable/bg_form_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_idcard"
                    android:textColor="@color/black_txt" />

                <EditText
                    android:id="@+id/et_idcard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_half"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_white_selector"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:id="@+id/tv_idcard_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:text="@string/info_edit"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_double"
            android:background="@drawable/btn_submit_selector"
            android:enabled="false"
            android:text="@string/submit_txt"
            android:textColor="@color/btn_submit_txt_selector"
            android:textSize="@dimen/size_title"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>