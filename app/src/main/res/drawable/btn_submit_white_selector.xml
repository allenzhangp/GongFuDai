<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/radius"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="1dp" android:color="@color/btn_submit_sel"></stroke>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_checked="true" android:state_checkable="true">
        <shape>
            <corners android:radius="@dimen/radius"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="1dp" android:color="@color/btn_submit_sel"></stroke>
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/radius"></corners>
            <solid android:color="@color/white"></solid>
            <stroke android:width="1dp" android:color="@color/yellow"></stroke>
        </shape>
    </item>





</selector>